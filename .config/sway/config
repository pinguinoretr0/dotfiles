# Make sure to install "/nwg-piotr/autotiling" (AUR)

# Startup
exec_always gsettings set org.gnome.desktop.interface gtk-theme "Nordic"
exec_always gsettings set org.gnome.desktop.wm.preferences theme "Nordic"
exec_always autotiling -w 1 3 5 7 9

xwayland enable

# Variables
set $mod Mod4
set $modShift Mod4+Shift

set $left 	h
set $down 	j
set $up 	k
set $right 	l

set $term 	alacritty
set $browser 	firefox
set $menu 	wofi -S drun -G -I -m -t

set $volUp 	pamixer -i 2	
set $volDown    pamixer -d 2	
set $volMute 	pamixer -t

# Output configuration
output HDMI-A-2 resolution 1920x1080 position 0,0
output * bg ~/Pictures/Wallpapers/eb1.png fill
# You can get the names of your outputs by running: swaymsg -t get_outputs

# Idle configuration
exec swayidle -w \
         timeout 900 'swaylock -f -c 000000' \
         timeout 400 'swaymsg "output * power off"' resume 'swaymsg "output * power on"' \
         before-sleep 'swaylock -f -c 000000'

# Windows
gaps inner 10
gaps outer 5
default_border none
default_floating_border none
font pango:monospace 0

# Key bindings
 # Applications & Other
    # Start a terminal
    bindsym $mod+Return exec $term
    # Start firefox
    bindsym $mod+b 	exec $browser
    # Start misc applications
    bindsym $modShift+d exec discord
    bindsym $mod+p 	exec pavucontrol 

    # Kill focused window
    bindsym $mod+w 	kill
    # Start your launcher
    bindsym $mod+d 	exec $menu
    # Reload the configuration file
    bindsym $modShift+r reload

    # Exit sway (logs you out of your Wayland session)
    bindsym $modShift+q exec swaymsg exit

 # XF86 & Other
    # Volume Bindings
    bindsym XF86AudioRaiseVolume exec $volUp
    bindsym F9 			 exec $volUp
    bindsym XF86AudioLowerVolume exec $volDown
    bindsym F8			 exec $volDown
    bindsym XF86AudioMute	 exec $volMute
    bindsym F10			 exec $volMute

    # Player Controlls
    bindsym XF86AudioPlay 	exec playerctl play-pause
    bindsym F5		 	exec playerctl play-pause
    bindsym XF86AudioNext       exec playerctl next
    bindsym F7		        exec playerctl next
    bindsym XF86AudioPrev       exec playerctl previous
    bindsym F6		        exec playerctl previous

    # Screenshit
    bindsym XF86Explorer 	exec grimshot save area 
    bindsym F11			exec grimshot save area

    # Drag floating windows using Mod + mouse
    floating_modifier $mod normal


# Moving around:

    # Move your focus around
    bindsym $mod+$left focus left
    bindsym $mod+$down focus down
    bindsym $mod+$up focus up
    bindsym $mod+$right focus right
    
    # Move the focused window with the same, but add Shift
    bindsym $modShift+$left move left
    bindsym $modShift+$down move down
    bindsym $modShift+$up move up
    bindsym $modShift+$right move right

# Workspaces:

    # Switch to workspace
    bindsym $mod+1 workspace number 1
    bindsym $mod+2 workspace number 2
    bindsym $mod+3 workspace number 3
    bindsym $mod+4 workspace number 4
    bindsym $mod+5 workspace number 5
    bindsym $mod+6 workspace number 6
    bindsym $mod+7 workspace number 7
    bindsym $mod+8 workspace number 8
    bindsym $mod+9 workspace number 9
    bindsym $mod+0 workspace number 10
    # Move focused container to workspace
    bindsym $modShift+1 move container to workspace number 1
    bindsym $modShift+2 move container to workspace number 2
    bindsym $modShift+3 move container to workspace number 3
    bindsym $modShift+4 move container to workspace number 4
    bindsym $modShift+5 move container to workspace number 5
    bindsym $modShift+6 move container to workspace number 6
    bindsym $modShift+7 move container to workspace number 7
    bindsym $modShift+8 move container to workspace number 8
    bindsym $modShift+9 move container to workspace number 9
    bindsym $modShift+0 move container to workspace number 10

# Layout stuff:
    # Make the current focus fullscreen
    bindsym $mod+f fullscreen

    # Toggle the current focus between tiling and floating mode
    bindsym $modShift+space floating toggle

    # Swap focus between the tiling area and the floating area
    bindsym $mod+space focus mode_toggle

# Scratchpad:

    # Sway has a "scratchpad", which is a bag of holding for windows.
    # You can send windows there and get them back later.

    # Move the currently focused window to the scratchpad
    bindsym $modShift+minus move scratchpad

    # Show the next scratchpad window or hide the focused scratchpad window.
    # If there are multiple scratchpad windows, this command cycles through them.
    bindsym $mod+minus scratchpad show

# Resizing containers:

mode "resize" {
    bindsym $left resize shrink width 10px
    bindsym $down resize grow height 10px
    bindsym $up resize shrink height 10px
    bindsym $right resize grow width 10px
   
    # Return to default mode
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+r mode "resize"

# Status Bar:
bar {
    swaybar_command waybar 
}

include /etc/sway/config.d/*
